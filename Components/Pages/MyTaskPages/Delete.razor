@page "/mytasks/delete"
@using Microsoft.EntityFrameworkCore
@using _2401377C.Domain
@inject IDbContextFactory<_2401377C.Data._2401377CContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MyTask</h2>
    <hr />
    @if (mytask is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">TaskName</dt>
            <dd class="col-sm-10">@mytask.TaskName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsCompleted</dt>
            <dd class="col-sm-10">@mytask.IsCompleted</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DueDate</dt>
            <dd class="col-sm-10">@mytask.DueDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedDate</dt>
            <dd class="col-sm-10">@mytask.CreatedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@mytask.CreatedBy</dd>
        </dl>
        <EditForm method="post" Model="mytask" OnValidSubmit="DeleteMyTask" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(mytask is null)">Delete</button> |
            <a href="/mytasks">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MyTask? mytask;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        mytask = await context.MyTask.FirstOrDefaultAsync(m => m.Id == Id);

        if (mytask is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMyTask()
    {
        using var context = DbFactory.CreateDbContext();
        context.MyTask.Remove(mytask!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/mytasks");
    }
}
